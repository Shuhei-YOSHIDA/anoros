<launch>
    <arg name="world_file"  default="$(env TURTLEBOT_GAZEBO_WORLD_FILE)"/>
    <arg name="gui" default="true"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="use_sim_time" value="true"/>
        <arg name="debug" value="false"/>
        <arg name="gui" value="$(arg gui)" />
        <arg name="world_name" value="$(arg world_file)"/>
    </include>

    <!-- robot 1 -->
    <group ns="robot1">
        <param name="tf_prefix" value="robot1_tf"/>
        <include file="$(find multi_turtlebot_gazebo)/launch/one_turtlebot_sim_data.launch.xml">
            <arg name="turtle_name" value="turtle1"/>
            <arg name="init_pose" value="-x 1 -y 1 -z 0" />
        </include>
    </group>

    <!-- robot 2 -->
    <group ns="robot2">
        <param name="tf_prefix" value="robot2_tf"/>
        <include file="$(find multi_turtlebot_gazebo)/launch/one_turtlebot_sim_data.launch.xml">
            <arg name="turtle_name" value="turtle2"/>
            <arg name="init_pose" value="-x 2 -y 2 -z 0" />
        </include>
    </group>

    <node name="$(anon rviz)" pkg="rviz" type="rviz" respawn="false"
        args="-d $(find multi_turtlebot_gazebo)/launch/multi_turtlebot.rviz" output="screen">

    </node>

    <node name="move" pkg="multi_turtlebot_gazebo" type="move.py" />
</launch>
